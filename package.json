{
  "name": "sommos",
  "version": "1.0.0",
  "description": "Yacht Sommelier Operating System - Offline-first wine management PWA",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "jest",
    "setup:db": "node backend/database/setup.js",
    "seed:data": "node backend/database/seed.js",
    "import:cellar": "node backend/database/import-cellar.js",
    "summary": "node backend/database/summary.js",
    "generate:secrets": "node scripts/generate-secrets.js",
    "verify:env": "node scripts/verify-environment.js",
    "spec:parity": "node scripts/check-spec-parity.js",
    "sbom:generate": "node scripts/generate-sbom.js",
    "test:weather": "node scripts/test-open-meteo.js"
  },
  "keywords": [
    "wine",
    "sommelier",
    "yacht",
    "pwa",
    "offline-first",
    "inventory",
    "ai-pairing"
  ],
  "author": "SommOS Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.2",
    "openai": "^5.23.0",
    "sqlite3": "^5.1.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.0.3",
    "concurrently": "^8.2.0",
    "express-list-endpoints": "^7.1.1",
    "fast-check": "^4.3.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
