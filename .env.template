# SommOS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server port (default: 3001)
PORT=3001

# Node environment (development, production, staging)
NODE_ENV=development

# =============================================================================
# VINTAGE INTELLIGENCE SERVICE
# =============================================================================

# OpenAI API Key (optional - enables AI-powered vintage summaries)
# Without this key, the service will use template-based summaries
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model to use (optional, default: gpt-4)
OPENAI_MODEL=gpt-4

# =============================================================================
# WEATHER DATA SOURCES (OPTIONAL)
# =============================================================================

# Weather API keys for enhanced vintage analysis
# The system works with built-in data, but external APIs provide richer analysis

# OpenWeatherMap API (optional)
# Get free API key from: https://openweathermap.org/api
WEATHER_API_KEY=

# Visual Crossing Weather API (optional)  
# Get API key from: https://www.visualcrossing.com/weather-api
VISUAL_CROSSING_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (relative to project root)
DATABASE_PATH=./data/sommos.db

# Database backup directory
DATABASE_BACKUP_DIR=./backups

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret for authentication (generate a strong secret)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# Session secret for express sessions
SESSION_SECRET=

# =============================================================================
# EXTERNAL INTEGRATIONS (FUTURE)
# =============================================================================

# Wine database integrations (placeholder for future features)
WINE_SPECTATOR_API_KEY=
VIVINO_API_KEY=
DECANTER_API_KEY=

# Procurement integrations (placeholder)
WINE_SEARCHER_API_KEY=
WINE_FOLLY_API_KEY=

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Application monitoring
SENTRY_DSN=

# Google Analytics (for PWA usage tracking)
GOOGLE_ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging (true/false)
DEBUG_MODE=false

# Enable vintage intelligence debug logs (true/false)
VINTAGE_DEBUG=false

# Mock weather data instead of real API calls (for testing)
MOCK_WEATHER_DATA=false