# Production Environment Configuration for SommOS
# Copy to .env and configure with actual values

# Application Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_PATH=/app/data/sommos.db
DATABASE_BACKUP_PATH=/app/data/backups

# API Keys
OPENAI_API_KEY=your_openai_api_key_here  # REQUIRED for AI wine pairing
OPEN_METEO_API_KEY=  # OPTIONAL - Leave empty for free tier, or get free key at open-meteo.com

# Security Settings
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_secure_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# SSL/TLS Settings (if using HTTPS)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Performance Settings
MAX_MEMORY_USAGE=512M
NODE_OPTIONS="--max-old-space-size=512"

# Monitoring and Logging
LOG_FILE_PATH=/app/logs/sommos.log
ERROR_LOG_PATH=/app/logs/error.log
ACCESS_LOG_PATH=/app/logs/access.log

# Feature Flags
ENABLE_AI_PAIRING=true
ENABLE_WEATHER_INTELLIGENCE=true
ENABLE_PROCUREMENT_ENGINE=true
ENABLE_ANALYTICS=true

# Backup Settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/data/backups

# Health Check Settings
HEALTH_CHECK_ENDPOINT=/api/system/health
HEALTH_CHECK_TIMEOUT=10000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Reporting
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your_sentry_dsn_here

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379